<div class="col m6 offset-m3" style="margin-top:5%">

  <h4 class='center-align'>ALTERAR SENHA</h4>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <h6><%= devise_error_messages! %></h6>
    </div>

    <div class="field">
      <%= f.label :password, 'Nova senha' %>
      <% if @minimum_password_length %>
      <em>(m√≠nimo de <%= @minimum_password_length %> caracteres)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Confirme a senha' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions right" style="margin-top:3%">
      <%= f.submit "ALTERAR MINHA SENHA", class: 'btn', id: 'btn-change-pass' %>
    </div>

    <div class="actions" style="margin-top:3%">
      <div class="section">
        <%= link_to raw('Entrar'), new_user_session_path %>
      </div>
    </div>

    <div class="actions center-align hide" style="margin-top:3%" id="preloading">
      <%= render '/shared/preloading' %>
    </div>

  <% end %>

</div>
